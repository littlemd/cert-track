%ul.nav.nav-tabs
  %li=link_to tag_icon(:list, pat(:list)), url(:certs, :index)
  %li=link_to tag_icon(:plus, pat(:new)), url(:certs, :new)
  %li.active=link_to tag_icon(:edit, pat(:edit)), url(:certs, :edit, :id => @cert.id)

.tabs-content
  = form_for :cert, url(:certs, :update, :id => @cert.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'certs/form', :locals => { :f => f }
